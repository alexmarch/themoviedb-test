<center>
	<div>
		<h1>Search for a movie</h1>
		<%= form_tag("/search", :method => "get") do %>
  		<%= text_field_tag(:query, nil, :class => "input-xlarge searchInput") %>
		<% end %>
	</div>
</center>

<h2>Now Playing</h2>

<% @now_playing.first(15).each do |movie| %>
	<% if movie %>

        <%= link_to movie_path(movie['id']), {:style => 'float: left', :class=> 'no-d-text'} do %>
            <p>Rating:&nbsp;<span style="color: #fff"><%= movie['vote_average'] %></span><div id="rating" class="rating" style="margin: 3px" data-score="<%= movie['vote_average'] %>"></div></p>
            <%= image_tag("#{@configuration.base_url}w154#{movie['poster_path']}") if movie['poster_path'] %>
		<% end %>
	<% end %>
<% end %>